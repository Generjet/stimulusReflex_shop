<p id="notice"><%= notice %></p>

  <%= render 'form', chat: @chat %>
  <%= render partial: 'message_part', locals: { new_message: @new_message } %>

  <div data-message-target="output"></div>


<b>Search</b>


    <table>
      <thead>
        <tr>
          <th>Message</th>
          <th>Sender</th>
          <th>Receiver</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @chats.each do |chat| %>
          <tr>
            <td><%= chat.message %></td>
            <td><%= chat.sender %></td>
            <td><%= chat.receiver %></td>
            <td><%= link_to 'Show', chat %></td>
            <td><%= link_to 'Edit', edit_chat_path(chat) %></td>
            <td><%= link_to 'Destroy', chat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>



